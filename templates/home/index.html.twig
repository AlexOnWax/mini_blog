{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<h1>Accueil</h1>

    {% for message in app.flashes('warning') %}
        <div class="warning">
            {{ message }}
        </div>
    {% endfor %}

    <ul>
    {% for theme in themes %}
        <li>
            <a href="{{ path('app_theme', {'slug': theme.slug}) }}">{{ theme.nom }}</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}
